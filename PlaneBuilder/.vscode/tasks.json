{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "python",
			"args": [
				"./server.py"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": ".."
			},
			"label": "Local Server"
		},
		{
			"type": "typescript",
			"tsconfig": "./tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "Watch Plane Builder",
		},
		{
			"label": "Watch All",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"Local Server",
				"Watch Plane Builder",
			]
		},
		{
			"type": "typescript",
			"tsconfig": "./tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "Build Plane Builder"
		},
		{
			"label": "Build All",
			"group": "build",
			"dependsOn": [
				"Local Server",
				"Build Plane Builder",
			]
		}
	]
}